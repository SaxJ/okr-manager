<div .ui.container>
    <h1>#{teamName team}
    <hr>
    $if not $ null members
        <div .card>
            <h3>Team Members
            <ul .list-group>
                $forall m <- members
                    <li .list-group-item>
                        <span data-member="#{fromSqlKey $ entityKey m}" type="submit" class="close #{deleteFormClass}" aria-label="Close" style="color: red;">
                            <span aria-hidden="true">&times;</span>
                        <h5>
                            #{teamMemberName $ entityVal m}
                            <small>
                                #{fromMaybe "" $  teamMemberDescription $ entityVal m}
            <h3>Objectives
            <ul .list-group>
                $forall o <- objectives
                    <li .list-group-item>
                        #{objectiveName o}

    $if isAdmin || isMember
        <hr>
        <form .form-horizontal method=post action=@{TeamObjectivesR teamId} enctype=#{enctype}>
            ^{objectiveFormWidget}
            <button .btn.btn-primary type="submit">
                Add Objective

    $if isAdmin
        <hr>
        <h1 style="margin-top: 100px;">Admin
        <form .form-horizontal method=post action=@{TeamR teamId} enctype=#{formEnctype}>
            ^{formWidget}
            <button .btn.btn-primary type="submit">
                Add Team Member
